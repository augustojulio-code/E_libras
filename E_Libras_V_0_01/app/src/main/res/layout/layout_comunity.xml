<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutranklisttop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corqualquer"
        android:layout_above="@+id/layoutranklist"
        >
        <TextView
            android:text="Comunidade"
            android:textSize="35dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutranklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layoutranklisttop">



        <EditText
            android:id="@+id/txtpergunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Deixe sua pergunta!"
            android:textColorHint="#000"
            android:fontFamily="casual"
            />

       <Button
           android:id="@+id/btnpergunta"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Enviar"
           android:background="@drawable/button_custom02"
           android:layout_gravity="center"
           android:layout_marginTop="15dp"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ListView
                android:id="@+id/listperguntas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>